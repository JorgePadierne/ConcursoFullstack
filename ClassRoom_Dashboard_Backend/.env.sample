# Copy this file to .env and fill real values for local development

# Postgres (compose has defaults; override if needed)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=apc5tdrd
POSTGRES_DB=classroom_dashboard

# JWT (required)
JWT_ISSUER=ClassroomDashboard
JWT_AUDIENCE=ClassroomDashboardAudience
# Generate a long random key for dev
JWT_SECRET_KEY=please-change-this-to-a-long-random-string

# Google OAuth (required)
# Example: 1234567890-abcdefghijklm.apps.googleusercontent.com
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Must match the Authorized redirect URI in Google Cloud OAuth client
# For SPA local dev we use the login route in the frontend
GOOGLE_REDIRECT_URI=http://localhost:5173/login

# CORS (CSV list of allowed origins)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://localhost:5173

# Optional: disable https redirect in container (kept true via compose)
DISABLE_HTTPS_REDIRECT=true
